def TicksASK = tick_count(priceType = PriceType.ASK);
def TicksBID = tick_count(priceType = PriceType.BID);

def diff = (TicksASK - TicksBID);

input highlightBelow = 5;
input highlightAbove = 20;

def highlight = 
  AbsValue(diff) < highlightBelow 
  or AbsValue(diff) > highlightAbove;

plot p = diff;
p.SetPaintingStrategy(PaintingStrategy.HISTOGRAM);
p.AssignValueColor(
  if !highlight then color.GRAY
  else if diff > 0 then color.GREEN 
  else color.RED
);
p.SetDefaultColor(Color.RED);
p.HideBubble();
p.SetLineWeight(4);
